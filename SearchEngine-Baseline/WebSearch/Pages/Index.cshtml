@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container">
    <div class="d-flex justify-content-center">
        <div>
            <div>
                <br>
                <label for="search" class="display-4">Enter search frases</label><br><br>
                <input type="text" id="search" name="search" style="width:100%;" data-bind="value: searchTerms"><br><br>
            </div>
            <br>
            <div class="d-flex justify-content-center">
                <button class="btn btn-primary" type="button" data-bind="click: search">Search Database</button>
            </div>
        </div>
    </div>

    <div>
        <br><br>
        <div class="d-flex justify-content-center">
            <p>Time used: <span data-bind="text: timeUsed"></span> milliseconds - Number of hits: <span data-bind="text: hits"></span></p>
        </div>
        <table data-bind="visible: results().length > 0" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Path to document</th>
                    <th>Hits in document</th>
                </tr>
            </thead>
            <tbody data-bind="foreach: results">
                <tr>
                    <td data-bind="text: path"></td>
                    <td data-bind="text: numberOfOccurences"></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>